%main.container
  = link_to sanitize("&larr; Back to quote"), quote_path(quote_id: @quote)
  .header
    %h1 Date

  = turbo_frame_tag dom_id(@line_item_date) do
    = turbo_frame_tag dom_id(@quote) do
      .line-item-date__header
        %h2.line-item-date__title= l(@line_item_date.date, format: :long)

        .line-item-date__actions
          = button_to "Delete",
                      [@quote, @line_item_date],
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure?" } },
                      class: "btn btn--light"

          = link_to "Edit",
                    [:edit, @quote, @line_item_date],
                    class: "btn btn--light"