%main.container
  %h2 Sign up

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise_form" }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email,
                  placeholder: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email",  }
      = f.input :password,
                  placeholder: "Password",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }
      = f.input :password_confirmation,
                  placeholder: "Password confirmation",
                  required: true,
                  input_html: { autocomplete: "new-password" }
    .form-actions
      = f.button :submit, "Sign up", class: "btn btn--dark"

  .links
    = render "devise/shared/links"
